{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2020",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext", "es6"],
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    //"allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    //"noUnusedLocals": false,
    //"noUnusedParameters": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    //"noImplicitAny": false,
    //"removeComments": false,
    "preserveConstEnums": true,
    //"sourceMap": true,
    "jsx": "preserve",
    "paths": {
      "@components/*": ["components/*", "components/*/index", "components/index"],
      "@styles/*": ["styles/*"],
      "@contexts/*": ["contexts/*"],
      "@services": ["services/index"],
      "@types/*": ["types/index"],
      "@helpers/*": ["helpers/*"],
      "@store/*": ["store/*"],
      "@store": ["store/index"],
      "@libs/*": ["libs/*"]
    },
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "out"
  ],
  "include": [ 
    "**/*.ts", 
    "**/*.tsx", 
    "**/*.js", 
    "**/*.jsx",
    "declarations.d.ts",
    "src/**/*.mjs",
    "src/**/*.html"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/types/*.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}